<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="size12_color_primary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="size12_color_secondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="size16_color_secondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="size16_color_primary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="size24_color_primary">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_bold</item>

    </style>

    <style name="text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="page_number">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="back" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="size14_color_secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>


    <style name="button" parent="@style/Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="elevation">4dp</item>
        <item name="android:textColor">?attr/colorMain</item>
        <item name="android:textAppearance">@style/text</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="skipButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">40dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="ToggleButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/size16_color_secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorGray</item>
        <item name="android:textColor">@drawable/selector_toggle_button_text</item>
        <item name="shapeAppearance">@style/ToggleButtonShape</item>
        <item name="backgroundTint">@drawable/selector_toggle_button</item>
    </style>

    <style name="ToggleButtonShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="buttonCalculator" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/size24_color_primary</item>
        <item name="backgroundTint">?attr/colorBackground</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="switcher.Light" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">?attr/colorMain</item>
        <item name="trackTint">?attr/colorGray</item>
    </style>

    <style name="switcher.Black" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">?attr/colorBackground</item>
    </style>


    <style name="Widget.Material3.CompoundButton.RadioButton.Mono" parent="@style/Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@drawable/radiobutton_currency</item>
    </style>

    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/edit_image_bg</item>
        <item name="android:paddingStart">@dimen/paddingEditText</item>
        <item name="android:paddingEnd">@dimen/paddingEditText</item>
        <item name="android:textAppearance">@style/size16_color_primary</item>
        <item name="android:textColorHint">?attr/colorGray</item>
        <item name="android:hint">@string/please_input</item>
    </style>

    <style name="BackButton" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/marginStartBackButton</item>
        <item name="android:layout_marginTop">@dimen/marginTopBackButton</item>
        <item name="android:text">@string/back</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAppearance">@style/size16_color_secondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>
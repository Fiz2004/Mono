<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Mono" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorMain</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorGray">@color/gray</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorMain">@color/white</item>
        <item name="switcher">@style/switcher.Light</item>
    </style>


</resources>
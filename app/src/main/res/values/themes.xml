<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="colorGray" format="color|reference" />
    <attr name="colorBackground" format="color|reference" />
    <attr name="colorMain" format="color|reference" />
    <attr name="switcher" format="reference" />

    <style name="Theme.Mono" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorMain</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorGray">@color/gray</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorMain">@color/white</item>

    <item name="switcher">@style/switcher.Light</item>
    </style>


</resources>
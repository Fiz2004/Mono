<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#A6A6A6</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>

    </style>

    <style name="text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="page_number">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="back" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#A6A6A6</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="pass">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#404040</item>
    </style>

    <style name="button" parent="@style/Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/text</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="skipButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">@style/text</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>



</resources>
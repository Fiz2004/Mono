<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.input.InputFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/blue"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextAppearance="@android:style/TextAppearance"
        app:tabTextColor="?attr/colorSecondaryVariant">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/income" />
    </com.google.android.material.tabs.TabLayout>

    <ImageButton
        android:id="@+id/leftDateRangeImageButton"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@drawable/arrow_left"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDate"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/editTextDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />


    <TextView
        android:id="@+id/editTextDate"
        style="@style/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="Feb 24, 2022 (Sat)"
        app:layout_constraintEnd_toStartOf="@+id/rightDateRangeImageButton"
        app:layout_constraintStart_toEndOf="@+id/leftDateRangeImageButton"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

    <ImageButton
        android:id="@+id/rightDateRangeImageButton"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDate"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextDate"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

    <TextView
        android:id="@+id/textExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <ImageView
        android:id="@+id/imageInputExpenseImageView"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/expense"
        android:text="@string/expense"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textExpense" />

    <TextView
        android:id="@+id/textInputExpenseImageView"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="$"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textExpense" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/outlinedTextField"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="numberDecimal"
        android:padding="0dp"
        android:layout_marginStart="60dp"
        android:text="0.00"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/textExpense" />

    <TextView
        android:id="@+id/noteInputTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageInputExpenseImageView" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/noteInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_image_bg"
        android:padding="0dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteInputTextView" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryInputRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="6dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/submitInputButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteInputEditText"
        app:spanCount="4"
        tools:itemCount="16"
        tools:listitem="@layout/grid_view_item" />

    <Button
        android:id="@+id/submitInputButton"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
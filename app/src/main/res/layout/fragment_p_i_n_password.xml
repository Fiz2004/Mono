<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.PINPasswordFragment">

    <Button
        android:id="@+id/backPINPasswordButton"
        style="@style/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pin_password"
        android:textAppearance="@style/size12_color_primary"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backPINPasswordButton" />

    <EditText
        android:id="@+id/editTextNumber"
        style="@style/pass"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:minEms="2"
        android:gravity="center"
        android:cursorVisible="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backPINPasswordButton"
        tools:text="5"/>

    <EditText
        android:id="@+id/editTextNumber2"
        style="@style/pass"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:minEms="2"
        android:gravity="center"
        android:cursorVisible="false"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/backPINPasswordButton"
        tools:text="5"/>

    <EditText
        android:id="@+id/editTextNumber3"
        style="@style/pass"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:minEms="2"
        android:gravity="center"
        android:cursorVisible="false"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber2"
        app:layout_constraintTop_toBottomOf="@+id/backPINPasswordButton"
        tools:text="5"/>

    <EditText
        android:id="@+id/editTextNumber4"
        style="@style/pass"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:minEms="2"
        android:gravity="center"
        android:cursorVisible="false"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
        app:layout_constraintTop_toBottomOf="@+id/backPINPasswordButton"
        tools:text="5"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_PIN"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/nextPINPasswordButton"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Next" />

</androidx.constraintlayout.widget.ConstraintLayout>